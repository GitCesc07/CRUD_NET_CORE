@model IEnumerable<CRUDNET_MVC.Models.Contactos>
@{
    ViewData["Title"] = "Lista de contactos";
}

<h1 class="text-center">Contacto con .NET 8 (.NET Core MVC)</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Home" class="btn  btn-secondary d-block">     
            <i class="fa-solid fa-plus"></i>
            Nuevo usuario
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white text-center"><strong>Lista de usuarios</strong></h3>
            </div>

            <div class="card-body">
                    <div class="table-responsive">
                        @if(Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tableUsuario" width="100%" cellpadding="0">
                            <thead>
                                <tr>
                                    @* <th>@Html.DisplayNameFor(m => m.Id)</th> *@
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>                                    
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        @* <td>@Html.DisplayFor(m => item.Id)</td> *@
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Telefono)</td>
                                        <td>@Html.DisplayFor(m => item.Celular)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id">
                                                <i class="fa-regular fa-pen-to-square"></i>
                                                Editar
                                            </a>
                                            
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-circle-info"></i>
                                                Detalle
                                            </a>
                                            
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id">
                                                <i class="fa-solid fa-eraser"></i>
                                                Borrar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros...</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
